<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SpotCustomDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_100dp</item>
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogSpotColor">@color/appColor</item>
        <item name="DialogSpotCount">5</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/appColor</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewMulti">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/txt_14</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/montserrat_bold</item>
    </style>

    <style name="TextViewBig">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/txt_18</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/montserrat_bold</item>
    </style>

    <style name="MyAppBarLayoutTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
